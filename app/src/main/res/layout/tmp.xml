<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_popup_back"
        tools:context=".PopupActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/txt_dialog_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위젯 추가"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/edt_dialog_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_dialog_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:selectAllOnFocus="true"
                android:hint="제목"
                android:textSize="15dp"
                android:inputType="text"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/setting_card_back"
                />
            <EditText
                android:id="@+id/edt_dialog_url"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:selectAllOnFocus="true"
                app:layout_constraintTop_toBottomOf="@id/edt_dialog_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="textUri"
                android:hint="URL"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:background="@drawable/setting_card_back"
                />
            <TextView
                android:id="@+id/txt_dialog_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모양선택"
                app:layout_constraintTop_toBottomOf="@id/edt_dialog_url"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_dialog_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_dialog_shape"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/layout_card_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardPreventCornerOverlap="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/layout_card_rectangle"
                    >
                    <ImageView
                        android:id="@+id/img_dialog_circle"

                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <ImageView
                        android:id="@+id/img_circle_check"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/arrow_left"
                        app:layout_constraintStart_toStartOf="@id/layout_card_circle"
                        app:layout_constraintTop_toTopOf="@id/layout_card_circle"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/layout_card_rectangle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardPreventCornerOverlap="false"
                    app:layout_constraintStart_toEndOf="@id/layout_card_circle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/layout_card_circle"
                    >
                    <ImageView
                        android:id="@+id/img_dialog_rectangle"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <ImageView
                        android:id="@+id/img_rectangle_check"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/arrow_left"
                        android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="@id/layout_card_rectangle"
                        app:layout_constraintTop_toTopOf="@id/layout_card_rectangle"
                        />
                </androidx.cardview.widget.CardView>




            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/txt_dialog_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="색깔선택"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/layout_dialog_shape"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rycl_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/txt_dialog_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:overScrollMode="never"
                android:fadeScrollbars="true"
                />

            <Button
                android:id="@+id/btn_widget_add_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확 인"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rycl_color"
                app:layout_constraintEnd_toStartOf="@id/btn_widget_add_x"
                android:layout_marginTop="15dp"
                app:layout_constraintCircleRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/btn_widget_add_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintCircleRadius="10dp"
                android:text="취 소"
                android:padding="5dp"
                app:layout_constraintStart_toEndOf="@id/btn_widget_add_o"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rycl_color"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="@id/btn_widget_add_o"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

